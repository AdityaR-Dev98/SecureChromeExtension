{
    "manifest_version": 3,
    "name": "Phishing & Malware Detector",
    "version": "1.0",
    "description": "Detects phishing attempts and malware on web pages.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["activeTab", "notifications", "scripting"],
    "background": {
      "service_worker": "background.js"
    }
  }
  